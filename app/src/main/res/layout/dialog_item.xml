<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="30dp"
    card_view:cardElevation="30dp"
    card_view:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/emailTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="justice@gmail.com" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place: "
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/destinationTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dandora phase 2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/fromTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2:00pm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: "
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/toTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 12:00am" />


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/approvedCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="approved" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
