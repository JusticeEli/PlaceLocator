<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="20dp"
    app:cardUseCompatPadding="false"
    card_view:cardCornerRadius="20dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="10dp">

        <TextView
            android:id="@+id/emailTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="justice@gmail.com" />

        <TextView
            android:id="@+id/destinationTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTxtView"
            android:layout_marginTop="10dp"
            android:text="Dandora phase 5" />

        <TextView
            android:id="@+id/fromTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@id/emailTxtView"
            android:text="From: 2:00pm" />

        <TextView
            android:id="@+id/toTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromTxtView"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/destinationTxtView"
            android:text="To: 12:49pm" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
